{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch STREAM-FDL",
      "type": "cppdbg",
      "request": "launch",

      "preLaunchTask": "Build FDL",
      "program": "${workspaceFolder}/STREAM-FDL/build/main",
      "args": ["${workspaceFolder}/STREAM-FDL/example-config.json", "&>", "${workspaceFolder}/STREAM-FDL/logs/$(date +'%F-%H-%M').log"],
      "cwd": "${workspaceFolder}/STREAM-FDL",
      "environment": [],

      // "stopAtEntry": false,
      // "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Allow SIGHUP",
          "text": "handle SIGHUP nostop pass print",
          "ignoreFailures": false
        }
      ]
    },
    {
      "name": "Launch STREAM-DSM",
      "type": "cppdbg",
      "request": "launch",

      "preLaunchTask": "Build DSM",
      "program": "${workspaceFolder}/STREAM-DSM/build/datamgmt/datamgmt",
      "cwd": "${workspaceFolder}/STREAM-DSM",
      "environment": [],

      // "stopAtEntry": false,
      // "externalConsole": false,
      "MIMode": "gdb",
    },
    {
      "name": "Launch STREAM evaluation",
      "terminalName": "Evaluation",
      "type": "f5anything",
      "request": "launch",

      "preLaunchTask": "Build evaluation",
      "command": "bash ${workspaceFolder}/.vscode/scripts/launch-irobot-benchmark.bash ${workspaceFolder}",

      "terminalIndex": -1
    }
  ],
  "compounds": [
    {
      "name": "Launch STREAM",
      "preLaunchTask": "Build STREAM",
      "configurations": [
        "Launch STREAM-FDL",
        "Launch STREAM-DSM"
      ],
      "stopAll": true,
    },
    {
      "name": "Launch evaluation",
      "preLaunchTask": "Build STREAM full",
      "configurations": [
        "Launch STREAM-FDL",
        "Launch STREAM-DSM",
        "Launch STREAM evaluation"
      ],
      "stopAll": false,
    }
  ]
}